# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# PowerShell files
[*.{ps1,psd1,psm1}]
indent_style = space
indent_size = 4

# Prevent auto-alignment of hashtable assignments
# This is controlled by PSScriptAnalyzer settings, not formatters
